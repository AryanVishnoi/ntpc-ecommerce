<!-- shop.ejs -->
<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <title>Shop Page</title>
    </head>

    <body>
        <header>
            <h2>Welcome,
                <%= name %> (
                <%= email %>)</h2>
        </header>

        <!-- Rest of your shop HTML content here -->
    </body>

</html>
<nav class="navbar bg-white shadow">
    <div class="nav-container flex items-center justify-between h-16 px-4">
        <!-- Logo and Navigation Links -->
        <div class="flex items-center">
            <a href="/" class="flex items-center" aria-label="NTPC Home">
                <img src="/logo/ntpc.jpg" alt="NTPC Logo"
                    class="nav-logo w-10 h-10 rounded-full">
            </a>

            <div class="nav-links hidden md:flex ml-10 space-x-6">
                <a href="/"
                    class="nav-link text-gray-700 hover:text-blue-700 font-medium">Home</a>
                <a href="/shop"
                    class="nav-link text-blue-700 font-semibold">Shop</a>
                <a href="/about"
                    class="nav-link text-gray-700 hover:text-blue-700 font-medium">About</a>
                <a href="/contact"
                    class="nav-link text-gray-700 hover:text-blue-700 font-medium">Contact</a>
            </div>
        </div>

        <!-- User Info + Actions -->
        <div class="user-actions hidden md:flex items-center space-x-4">
            <% if (typeof name !== 'undefined' && typeof email !== 'undefined')
            { %>
            <div class="text-sm text-gray-800">
                Welcome, <strong><%= name %></strong><br>
                <span class="text-xs text-gray-600"><%= email %></span>
            </div>
            <a href="/cart" class="text-gray-700 hover:text-blue-700"
                title="Cart">
                <i class="fas fa-shopping-cart text-xl"></i>
            </a>
            <a href="/logout"
                class="bg-red-500 text-white px-3 py-1 rounded-md text-sm hover:bg-red-600 transition">
                Logout
            </a>
            <% } else { %>
            <a href="/login"
                class="btn-login px-4 py-2 rounded-md text-sm font-medium">Login</a>
            <a href="/signup"
                class="btn-signup px-4 py-2 rounded-md text-sm font-medium">Sign
                Up</a>
            <% } %>
        </div>

        <!-- Mobile Menu Button -->
        <button class="hamburger md:hidden text-gray-700" aria-label="Menu">
            <i class="fas fa-bars text-2xl"></i>
        </button>
    </div>

    <!-- Mobile Menu -->
    <div class="mobile-menu md:hidden px-4 py-3">
        <a href="/"
            class="block py-2 text-gray-700 hover:bg-gray-100 rounded">Home</a>
        <a href="/shop" class="block py-2 text-blue-700 font-semibold">Shop</a>
        <a href="/about"
            class="block py-2 text-gray-700 hover:bg-gray-100 rounded">About</a>
        <a href="/contact"
            class="block py-2 text-gray-700 hover:bg-gray-100 rounded">Contact</a>

        <% if (typeof name !== 'undefined' && typeof email !== 'undefined') { %>
        <div class="mt-3 text-sm text-gray-800">
            Welcome, <strong><%= name %></strong><br>
            <span class="text-xs text-gray-600"><%= email %></span>
        </div>
        <a href="/cart"
            class="block mt-2 py-2 text-gray-700 hover:bg-gray-100 rounded">Cart</a>
        <a href="/logout"
            class="block mt-2 bg-red-500 text-white text-center py-2 rounded hover:bg-red-600 transition">
            Logout
        </a>
        <% } else { %>
        <a href="/login"
            class="block mt-2 text-center py-2 rounded-md text-sm font-medium">Login</a>
        <a href="/signup"
            class="block mt-1 text-center py-2 rounded-md text-sm font-medium">Sign
            Up</a>
        <% } %>
    </div>
</nav>